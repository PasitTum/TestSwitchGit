@model Register.Models.RegisterModel
@using CaptchaMvc.HtmlHelpers
@{
    ViewBag.Title = "สมัครสอบ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row" ng-app="registerApp" ng-controller="registerController">
    <div class="col-12 px-1 px-md-3">
        <form method="post" action="@Url.Action("Register", "Register")" class="form-horizontal" id="checkCitizenID" name="checkCitizenID" ng-submit="validateCitizen($event)">
            @Html.AntiForgeryToken()
            <div class="card">
                <h5 class="card-header header-table">@SysParameterHelper.ApplicationName</h5>
                <div class="card-body form-group pl-3 pb-1">
                    <div class="row ">
                        <div class="col-12 col-md-12 control-label col-form-label text-center text-blue information font-weight-bold">กรอกข้อมูลให้ตรงกับบัตรประจำตัวประชาชนของท่าน (ใบล่าสุด)</div>
                    </div>
                    <div class="row mt-3">
                        <label class="col-12 col-md-4 control-label col-form-label text-md-right information required">เลขประจำตัวประชาชน (13 หลัก)</label>
                        <div class="col-12 col-md-6" ng-class="{ 'validation-error': (checkCitizenID.citizenID.$error.pattern || checkCitizenID.citizenID.$error.required) && checkCitizenID.citizenID.$dirty }">
                            <input type="text" class="form-control col-md-5 d-inline" id="citizenID" name="citizenID"
                                   ng-model="model.CitizenID"
                                   ng-pattern="/^[0-9]{13}$/"
                                   maxlength="13" autocomplete="off" placeholder="ตัวอย่าง 1234567890123" required />
                        </div>
                    </div>
                    @*<div class="row">
                        <label class="col-12 col-md-4 col-form-label text-md-right information"></label>
                        <label for="" class="col-12 col-md-6 col-form-label text-danger ng-cloak">ตัวอย่าง&nbsp;&nbsp;1234567890123</label>
                    </div>*@
                    @*<div class="row mt-3">

                <div class="col-12 offset-md-1 col-md-10 text-center">
                    <img src="~/Content/Images/banklist3.png" style="max-width: 100%; border: solid 1px black" />
                </div>

            </div>*@
                    <div class="row mt-5">
                        <div class="col-12 col-md-12 text-center">
                            <a href="@Url.Action("Index","Home")" class="btn btn-primary ml-1"><i class="fas fa-home"></i> กลับหนัาหลัก</a>
                        </div>
                    </div>
                </div>
        </div>
    </div>
</div>

